<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="56dp"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_alert_red_circle">

    <!--  Element ripple  -->
    <FrameLayout
        android:layout_width="@dimen/menu_item_ripple_size"
        android:layout_height="@dimen/menu_item_ripple_size"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/iv_ic_waiters"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_waiters"
        android:layout_centerHorizontal="true"
        app:tint="@color/white"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:background="@drawable/background_r50_color_accent"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/iv_ic_waiters"
        android:layout_marginTop="-8dp"
        >

        <TextView
            android:id="@+id/tv_waiters_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </LinearLayout>

</RelativeLayout>