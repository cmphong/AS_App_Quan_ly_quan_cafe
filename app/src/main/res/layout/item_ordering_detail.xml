<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_contain_fragment"
    android:paddingVertical="10dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_ordering_detail_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image_smothie_avocado"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:paddingStart="15dp">
        <TextView
            android:id="@+id/tv_ordering_detail_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Masala"
            android:textSize="@dimen/size_big"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_ordering_detail_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_big"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_ordering_detail_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$15.00"
            android:textColor="@color/white"
            android:textSize="@dimen/size_big"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>