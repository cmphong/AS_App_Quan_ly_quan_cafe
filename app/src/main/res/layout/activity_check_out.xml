<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_CheckOut"
    android:background="@color/myBackgroundPrimary"
    >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table 001"
            android:textColor="@color/primary"
            android:textSize="@dimen/size_bigest"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fl_add_new">
        </TextView>
        <FrameLayout
            android:id="@+id/fl_add_new"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/colorControlHiglight_grey200"
            android:background="?attr/selectableItemBackgroundBorderless">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/primary"
            android:textSize="@dimen/heading_1"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            />
        </FrameLayout>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="10dp"
        android:layout_below="@+id/header">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Item"
            android:textColor="@color/grey500"
            android:textSize="@dimen/size_normal"
            android:layout_weight="2.5"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Price"
            android:textColor="@color/grey500"
            android:textSize="@dimen/size_normal"
            android:layout_weight="2"
            android:textAlignment="textEnd"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Qnt"
            android:textColor="@color/grey500"
            android:textSize="@dimen/size_normal"
            android:layout_weight="3.5"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Total"
            android:textColor="@color/grey500"
            android:textSize="@dimen/size_normal"
            android:layout_weight="2"
            android:textAlignment="textEnd"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/myBackgroundSecondary"
        android:layout_below="@+id/group_title"
        android:layout_marginVertical="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_checkout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/group_detail"
        android:layout_below="@+id/divider"
        />

    <LinearLayout
        android:id="@+id/group_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/group_button"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/Sub_total"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/tv_sub_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="120.00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/Tax"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/tv_tax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="3.00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/Other_Charge"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/tv_other_charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textAlignment="textEnd"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="@color/myBackgroundSecondary"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/Amount_to_Pay"
                android:textColor="@color/white"
                android:textSize="@dimen/size_normal"
                android:textStyle="bold"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="123.00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_big"
                android:textAlignment="textEnd"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/Back"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/background_r0_effect_color_accent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/Pay"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/background_r0_effect_color_primary"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>