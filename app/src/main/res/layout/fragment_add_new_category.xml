<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Add_New_Category"
    android:background="@color/dodgerblue"
    android:id="@+id/fragment_add_new_category"
    android:orientation="vertical"
    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Add New Category"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_1"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_addData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"
            android:layout_marginEnd="40dp"
            />

        <Button
            android:id="@+id/btn_getData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Data"
            android:layout_marginStart="40dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User info"
        android:layout_marginTop="20dp"
        />




</LinearLayout>